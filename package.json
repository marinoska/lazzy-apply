{
	"name": "lazyapply",
	"version": "1.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"clean": "turbo run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.3.0",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=22"
	}
}
