{
	"name": "@lazyapply/api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsx watch --clear-screen=false src/index.ts",
		"build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
		"start": "node ./dist/index.js",
		"lint": "biome check .",
		"clean": "rm -rf dist",
		"test": "vitest --run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --run --coverage",
		"setup:cors": "tsx src/util/setupR2Cors.ts",
		"recalculate:balances": "tsx src/util/recalculateBalances.ts",
		"recalculate:balances:dry-run": "tsx src/util/recalculateBalances.ts --dry-run"
	},
	"dependencies": {
		"@ai-sdk/openai": "^2.0.72",
		"@aws-sdk/client-s3": "^3.925.0",
		"@aws-sdk/s3-presigned-post": "^3.927.0",
		"@aws-sdk/s3-request-presigner": "^3.925.0",
		"@hapi/boom": "^10.0.1",
		"@lazyapply/schemas": "workspace:*",
		"@lazyapply/types": "workspace:*",
		"@lazyapply/utils": "workspace:*",
		"ai": "^5.0.102",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"helmet": "^7.2.0",
		"jose": "^6.1.0",
		"mongoose": "^7.8.7",
		"pino": "^9.14.0",
		"pino-http": "^7.1.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@lazyapply/config": "workspace:*",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.25",
		"@types/node": "^22.19.0",
		"@vitest/coverage-v8": "^2.1.9",
		"mongodb-memory-server": "^10.3.0",
		"pino-pretty": "^11.3.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^2.1.9"
	}
}
